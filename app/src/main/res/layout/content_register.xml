<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.edwardlafontant.theshannonhoboken.Register"
    tools:showIn="@layout/activity_register"
    android:background="@drawable/greenfade"
    android:weightSum="1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regLogo"
        android:src="@mipmap/brand"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_above="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_weight="0.35"
        android:layout_marginTop="-100dp"/>
    <Space
        android:layout_width="fill_parent"
        android:layout_height="40dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/Reg_SName"
        android:inputType="textPersonName"
        android:hint="Enter your Full Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#b7104308" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/Reg_UserName"
        android:inputType="textPersonName"
        android:hint="Enter a username"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:autoText="false"
        android:background="#b7104308" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:inputType="textEmailAddress"
        android:id="@+id/Reg_Email"
        android:hint="Enter your Email Address"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#b7104308" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/Reg_pass1"
        android:hint="Enter a password (Min. 6 characters)"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:background="#b7104308" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:id="@+id/Reg_pass2"
        android:inputType="textPassword"
        android:hint="Confirm  password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#b7104308" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Reg"
        android:text="Register"
        android:backgroundTint="#64f72e"
        android:background="#64f72e"
        android:onClick="userReg"/>

</LinearLayout>
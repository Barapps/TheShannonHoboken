<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.edwardlafontant.theshannonhoboken.MainMenu"
    tools:showIn="@layout/activity_main_menu"
    android:background="@drawable/mainmenupic"
    >

    <LinearLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </TableRow>
        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

    <TextView
        android:text="Hoboken&apos;s Premier Sports Bar | Major Sport Packages on 26 HD TVS &amp; Projection Screen | Pool, Darts, Foozeball, and Trivia Available Daily | Happy Hour Monday Through Friday!"
        android:id="@+id/MarqueeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:textColor="#ffffff"
        android:textSize="16dp" />
        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_column="22"
        android:src="@drawable/brand" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:text="My Profile"
            android:id="@+id/btnmyprofile"
            android:background="#c8ffffff" />
        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="About Us"
        android:id="@+id/btnaboutus"
        android:layout_x="0dp"
        android:layout_y="60dp"
        android:layout_below="@+id/MarqueeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_column="46"
        android:background="#c9ffffff" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="Drink Menu"
        android:id="@+id/btndrinkmenu"
        android:background="#c8ffffff" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="Events"
        android:id="@+id/btnevents"
        android:background="#c8ffffff" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="Scoreboard"
        android:id="@+id/btnscoreboard"
        android:background="#c8ffffff" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="Pics"
        android:id="@+id/btnpics"
        android:background="#c8ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:text="Update Team Stats"
            android:id="@+id/btnwin"
            android:background="#c8ffffff" />
        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:text="Rate Us!"
            android:id="@+id/btnRateus"
            android:background="#c8ffffff" />
        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/songrequestbtn"
            android:layout_gravity="center_horizontal"
            android:background="#00ffffff"
            android:id="@+id/songbtn"
           />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <Button
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="Log Out"
        android:id="@+id/btnlogout"
        android:background="#c8ff0000"
        android:onClick="logOut"/>


</LinearLayout>

</ScrollView>
